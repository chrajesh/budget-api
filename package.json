{
  "name": "budget-api",
  "version": "1.0.0",
  "description": "Budget Planning API - Node.js Express implementation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-api.js",
    "docker:build": "docker build -t budget-api:latest .",
    "docker:run": "docker run -p 80:80 budget-api:latest",
    "docker:compose": "docker-compose up",
    "gcp:deploy": "gcloud run deploy budget-api --source . --region us-central1 --allow-unauthenticated --port 80"
  },
  "keywords": [
    "budget",
    "api",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.1",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
